<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:fitsSystemWindows="true"

    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/riv_nav_avatar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="@dimen/list_item_margin"
        android:layout_marginLeft="@dimen/list_item_margin"
        android:layout_marginRight="@dimen/list_item_margin"
        android:background="@color/primaryTextColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_subtitle_height"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/list_item_margin"
        android:layout_marginRight="@dimen/list_item_margin">

        <TextView
            style="@style/FullNameText"
            android:id="@+id/tv_nav_full_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="@string/app_name"/>

        <TextView
            style="@style/EmailAddressText"
            android:id="@+id/tv_nav_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="asfaffafaffasfsdfsdfsdf"/>
    </LinearLayout>

</LinearLayout>