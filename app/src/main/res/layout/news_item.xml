<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_article_height"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="@dimen/list_item_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/list_item_margin"
        android:orientation="vertical">

        <TextView
            style="@style/ArticleHeaderText"
            android:id="@+id/tv_article_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            tools:text="sfsdfdfdfdfdfdfddfdfdfdffffff"/>

        <TextView
            style="@style/ArticleBodyText"
            android:id="@+id/tv_article_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_article_header"
            android:layout_above="@+id/tv_article_time"
            android:layout_marginTop="@dimen/list_item_article_text_margin_top"
            tools:text="sfsdfdfdfdfdfdfdfdfdfdfdfdfdfdfdfdfdfdfdfdfdfdfdff"/>

        <TextView
            style="@style/ArticleTimeText"
            android:id="@+id/tv_article_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/list_item_article_text_margin_top"
            tools:text="sfsf"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_article_image"
        android:layout_width="@dimen/list_item_article_image_width"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

</LinearLayout>