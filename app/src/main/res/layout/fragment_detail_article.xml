<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.news.fragments.EditProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/iv_article_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_image_load"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/list_item_margin"
            android:paddingRight="@dimen/list_item_margin">

            <TextView
                style="@style/ArticleFullHeaderText"
                android:id="@+id/tv_article_full_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                tools:text="Bakalo" />

            <TextView
                style="@style/ArticleFullTimeText"
                android:id="@+id/tv_article_full_source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:textStyle="bold"
                tools:text="Bakalo" />

            <TextView
                style="@style/ArticleFullTimeText"
                android:id="@+id/tv_article_full_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:clickable="true"
                tools:text="Badhgdfhgdfhgdfhgdfhgdfhgdfhdfhgdfghdfhgdfhdfhgdfhgdfhkalo" />

            <TextView
                style="@style/ArticleFullBodyText"
                android:id="@+id/tv_article_full_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                tools:text="Bakalo"
                android:layout_marginTop="16dp"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>