<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>

    </style>

    <style name="FullNameText" parent="RobotoMedium">
        <item name="android:textSize">@dimen/full_name_text_size</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="EmailAddressText" parent="RobotoRegular">
        <item name="android:textSize">@dimen/full_name_text_size</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="DrawerItemText" parent="RobotoMedium">
        <item name="android:textSize">@dimen/full_name_text_size</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RobotoLight">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="RobotoMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="RobotoThin">
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="RobotoRegular">
        <item name="android:fontFamily">sans-serif</item>
    </style>

</resources>
